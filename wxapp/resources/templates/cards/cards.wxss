.registration {
    background-color: #F8F8F8;
    margin-bottom: 10px;
    margin-left: 10px;
    height: 100px;
    overflow: hidden;
    border-radius: 5px;
}

.registration .name {
    font-size: 18px;
}

.regis-info {
    font-size: 12px;
}

.registration image {
    width: 100%;
    height: 100px;
}

.regis-image {
    width: 45%;
    height: 100px;
    display: inline-block;
    vertical-align: top;
}

.regis-info {
    padding-left: 5%;
    display: inline-block;
    width: 50%;
}

.regis-info .name {
    margin-bottom: 10%;
    font-size: 15px;
    color: #35A4DF;
}

.regis-info .hoster {
    color: black
}

.regis-info .host {
    color: black;
    display: inline-block;
    width: 40%;
    font-weight: bold;
    margin-top: 2%;
}

.regis-info .start-time {
    display: inline-block;
    width: 60%;
}

.regis-info .location {
    display: inline-block;
    width: 40%;
}