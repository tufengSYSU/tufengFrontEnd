<!-- 消息 -->
<template name="personalizations">
  <view class="Personalization">
    <view class="personalization" wx:for="{{personalizations}}" wx:for-item="personalization" wx:key="{{*index}}">
      <view class="table">
        <view class="tr">
          <view class="td"></view>
          <view class="td1">姓名</view>
          <view class="td2">{{personalization.person.name}}</view>
        </view>

        <view class="tr">
          <view class="td"></view>
          <view class="td1">性别</view>
          <view class="td2">{{personalization.person.gender}}</view>
        </view>
        
        <view class="tr">
          <view class="td"></view>
          <view class="td1">生日</view>
          <view class="td2">{{personalization.birthday}}</view>
        </view>

        <view class="tr">
          <view class="td"></view>
          <view class="td1">家乡</view>
          <view class="td2">{{personalization.hometown}}</view>
        </view>
      </view>
      
      <view class="table">
        <view class="tr">
          <view class="td"></view>
          <view class="td1">院校</view>
          <view class="td2">{{personalization.person.info.school}}</view>
        </view>
        <view class="tr">
          <view class="td"></view>
          <view class="td1">专业</view>
          <view class="td2">{{personalization.major}}</view>
        </view>
      
      </view>
      
      <view class="table">
        <view class="tr">
          <view class="td"></view>
          <view class="td1">个性签名</view>
          <view class="td2">{{personalization.person.description}}</view>
        </view>
        <view class="tr">
          <view class="td"></view>
          <view class="td1">QQ</view>
          <view class="td-p2">{{personalization.QQ}}</view>
          <view class='p-avatar'>
            <image src="{{personalization.person.avatar}}"></image>
          </view>
        </view>
        <view class="tr">
          <view class="td"></view>
          <view class="td1">WeChat</view>
          <view class="td-p2">{{personalization.WeChat}}</view>
          <view class='p-avatar'>
            <image src="{{personalization.person.avatar}}"></image>
          </view>
        </view>
        <view class="tr">
          <view class="td"></view>
          <view class="td1">电话</view>
          <view class="td-p2">{{personalization.phoneNumber}}</view>
          <view class='p-avatar'>
            <image src="{{personalization.person.avatar}}"></image>
          </view>
        </view>
      </view>
    
    </view>
  </view>
</template>
