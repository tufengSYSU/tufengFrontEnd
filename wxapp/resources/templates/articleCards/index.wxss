.articles .date {
    margin-left: 10px;
    color: #ffba56;
    font-size: 20px;
}

.articles .articlesInOneDay {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
}

.article {
    width: 45vw;
    height: 45vw;
    border: 1px solid #ededef;
    border-radius: 5px;
    margin-top: 20px;
}

.article .picture {
    width: 100%;
    height: 27vw;
    border-radius: 5px 5px 0 0;
    overflow: hidden;
}

.article .picture image {
    width: 100%;
    height: 27vw;
}

.article .content {
    font-size: 12px;
    margin: 5px;
}

.article .title {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    color: #5b5b5b;
    font-weight: bolder;
}

.content .time {
    margin-top: 5px;
    color: #adadad;
    float: left;
}

.content .location {
    margin-top: 5px;
    color: #adadad;
    float: right;
}