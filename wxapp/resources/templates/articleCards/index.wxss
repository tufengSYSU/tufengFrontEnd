.articles .date {
    margin-left: 10px;
    color: #ffba56;
    font-size: 20px;
}

.articles .articlesInOneDay {
    margin-left: 3.5%;
}

.articles .article {
    width: 45vw;
    height: 45vw;
    border: 1px solid #ededef;
    border-radius: 5px;
    overflow: hidden;
    display: inline-block;
    margin-right: 2%;
}

.article .picture {
    width: 100%;
    height: 27vw;
    border-radius: 5px 5px 0 0;
    overflow: hidden;
}

.article .picture image {
    width: 100%;
    height: 27vw;
}

.article .content {
    font-size: 12px;
    margin: 5px;
}

.article .title {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    color: #5b5b5b;
    font-weight: bolder;
    margin-bottom: 5rpx;
}

.article .oneLineText {
    -webkit-line-clamp: 1;
    line-height: 15px;
}

.content .time {
    color: #adadad;
    float: left;
}

.content .location {
    color: #adadad;
    float: right;
}