/* location and search bar */
.search-container {
  clear: both;
}

.search-wrap {
  margin-top: 5px;
}

/*** location */
.location-container {
  width: 15%;
  font-size: 11px;
  height: 15px;
  color: #576895;
  border-radius: 20px;
  background-color: #b2b2b2;
  opacity: 0.5;
  float: left;
  padding: 5px;
  margin-right: 5px;
}

.address {
  width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  float: left;
}

.location-image {
  width: 11px;
  height: 11px;
  vertical-align: center;
}

/*** search bar */
.search-bar-container {
  position: relative;
}

.icon-search {
  position: absolute;
  right: 10px;
  top: 5px;
  z-index: 99;
}

.search-bar-container input {
  min-height: 24px;
  vertical-align: middle;
  font-size: 11px;
  height: 24px;
  line-height: 24px;
  border: 1px solid grey;
  border-radius: 20px;
  text-align: center;
}

/*** location end */
/*** search bar end */
