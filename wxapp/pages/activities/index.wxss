}

.swiper-calendar-contanier {
  margin-top: 10px;
  height: 700px;
}

.calendar-wrapper {
  padding-left: 32px;
}

.calendar-container {
  width: 300rpx;
  margin-right: 30rpx;
  display: inline-block;
}

.article-date {
  text-align: center;
  vertical-align: middle;
  width: 100%;
  height: 20px;
  font-size: 11px;
  color: #576b95;
}

.article-container {
  margin-top: 10rpx;
}

/**** article description container: ie... orglogo headline*/
.article-description-container {
  width: 300rpx;
  height: 280rpx;
  border-radius: 5px;
  box-shadow: 0px 0px 1px 0px #999;
  position: relative;
  background-position: center;
}

.article-image-container {
  height: 230rpx;
  border-radius: 5px 5px 0px 0px;
}

.article-coverimage {
  width: 300rpx;
  height: 280rpx;
  border-radius: 5px 5px 5px 5px;
}

.article-description {
  position: absolute;
  bottom: 0px;
  color: white;
  width: 100%;
  font-size: 11px;
  border-radius: 0 0 5px 5px;
}

.article-brief-information {
  margin: 5px 0 0 5px;
}

.org-logo {
  vertical-align: middle;
  /* height: 30px; */
  float: left;
}

.org-logo image {
  margin: 0 5px;
  width: 15px;
  height: 15px;
}

.article-headline {
  width: 100%;
  white-space: normal;
  text-align: center;
}

.mark-container {
  text-align: center;
  font-size: 9px;
  position: absolute;
  top: 0px;
  width: 100%;
}

.mark {
    margin: 0 auto;
    width: 100px;
    border-bottom: 5rpx solid white;
    border-left: 3rpx solid transparent;
    border-right: 3rpx solid transparent;
    border-color: rgba(255, 255, 255, 0.5);
    border-radius: 5px;
}

.mark-container image {
  width: 10px;
  height: 10px;
}

.activity-brief-headline {
  margin-top: 5px;
  clear: both;
  font-size: 13px;
  line-height: 30px;
  text-align: center;
}

