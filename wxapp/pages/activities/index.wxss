/* slide-image end */

/* location and search bar */
.search-container {
  clear: both;
}

.search-wrap {
  margin-top: 5px;  
}

/*** location */
.location-container {
  width: 15%;
  font-size: 11px;
  height: 15px;
  color: #576895;
  border-radius: 20px;
  background-color: #b2b2b2;
  opacity: 0.5;
  float: left;
  padding: 5px;
  margin-right: 5px;
}

.address {
  width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  float: left;
}

.location-image {
  width: 11px;
  height: 11px;
  vertical-align: center;
}

/*** search bar */
.search-bar-container {
  position: relative;
}

.icon-search {
  position: absolute;
  right: 10px;
  top: 5px;
  z-index: 99;
}

.search-bar-container input {
  min-height: 24px;
  vertical-align: middle;
  font-size: 11px;
  height: 24px;
  line-height: 24px;  
  border: 1px solid grey;
  border-radius: 20px;
  text-align: center;  
}

/*** location end */
/*** search bar end */
/* location and search bar end */

/* artical calendar */
.scroll-calendar-box {
  margin-top: 10px;
  white-space: nowrap;
  overflow-x: scroll;
  -webkit-overflow-scrolling:touch;
}

.calender-box {
  width: 300rpx;
  margin-right: 24rpx;
  display: inline-block;
}

.article-date {
  text-align: center;
  vertical-align: middle;
  width: 100%;
  height: 20px;
  font-size: 11px;
  color: #576b95;
}

/*** all articles container(maybe more than one article) */
.article-wrapper {
  margin-top: 10rpx;
}

/**** one article container */
.article-container {
  width: 300rpx;
  height: 370rpx;
  border-radius: 5px;
  box-shadow: 0px 0px 1px 0px #999;
  position: relative;
}

.article-image-container {
  height: 230rpx;
  border-radius: 5px 5px 0px 0px;
}

.article-coverimage {
  width: 300rpx;
  height: 230rpx;
  border-radius: 5px 5px 0px 0px;  
}

.org-logo {
  font-size: 11px;
  vertical-align: middle;
  height: 50px;
  float: left;
}

.org-logo image {
  margin: 0 5px;
  width: 15px;
  height: 15px;
}

.article-brief-information {
  margin: 5px 0 0 5px;
}

.article-headline {
  width: 95%;
  font-size: 11px;
  white-space: normal;
}

.mark-container {
  position: absolute;
  right: 0px;
  bottom: -5px;
}

.mark-container image {
  width: 10px;
  height: 10px;
}

.activity-brief-headline {
  margin-top: 5px;
  clear: both;
  font-size: 11px;
  text-align: center;
}