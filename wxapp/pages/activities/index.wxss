/* slide-image */
.slide-container {
  width: 100%;
}

.logo {
  position: absolute;
  left: 47%;
  top: 30px;    
  z-index: 99;
}

.logo image {
  width: 25px;
  height: 25px;
  opacity: 0.4;
  background-color: blue;
}

/** slide-image style */
.picture-swiper {
  height: 85px;
  width: 100%;
}

.slide-image {
  width: 100%;
  height: 85px;
}

