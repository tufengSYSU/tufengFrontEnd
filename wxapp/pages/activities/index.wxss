/* location and search bar */
.search-container {
  clear: both;
}

.search-wrap {
  margin-top: 5px;
}

/*** location */
.location-container {
  width: 15%;
  font-size: 11px;
  height: 15px;
  color: #576895;
  border-radius: 20px;
  background-color: #b2b2b2;
  opacity: 0.5;
  float: left;
  padding: 5px;
  margin-right: 5px;
}

.address {
  width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  float: left;
}

.location-image {
  width: 11px;
  height: 11px;
  vertical-align: center;
}

/*** search bar */
.search-bar-container {
  position: relative;
}

.icon-search {
  position: absolute;
  right: 10px;
  top: 5px;
  z-index: 99;
}

.search-bar-container input {
  min-height: 24px;
  vertical-align: middle;
  font-size: 11px;
  height: 24px;
  line-height: 24px;
  border: 1px solid grey;
  border-radius: 20px;
  text-align: center;
}

/*** location end */
/*** search bar end */
/* location and search bar end */

/* artical calendar */
.swiper-calendar-contanier {
  margin-top: 10px;
  height: 1200px;
}

swiper-item {
  margin-left: 20px;
}

.calendar-container {
  width: 300rpx;
  margin-right: 20px;
  display: inline-block;
}

.article-date {
  text-align: center;
  vertical-align: middle;
  width: 100%;
  height: 20px;
  font-size: 11px;
  color: #576b95;
}

.article-container {
  margin-top: 10rpx;
}

/**** article description container: ie... orglogo headline*/
.article-description-container {
  width: 300rpx;
  height: 300rpx;
  border-radius: 5px;
  box-shadow: 0px 0px 1px 0px #999;
  position: relative;
  background-position: center;
}

.article-image-container {
  height: 300rpx;
  border-radius: 5px 5px 0px 0px;
}

.article-coverimage {
  width: 300rpx;
  height: 300rpx;
  border-radius: 5px 5px 5px 5px;
}

.mark-container {
  text-align: center;
  font-size: 9px;
  font-weight: lighter;
  position: absolute;
  top: 0px;
  width: 100%;
}

.mark {
  margin: 0 auto;
  width: 100px;
  border-color: rgba(255, 255, 255, 0.5);
}

.article-description {
  position: absolute;
  bottom: 0px;
  color: white;
  width: 100%;
  letter-spacing: 1px;
  font-size: 11px;
  border-radius: 0 0 5px 5px;
  background-color: rgba(0,0,0,0.5);
}

.article-brief-information {
  margin: 5px 0 0 5px;
}

.org-logo {
  vertical-align: middle;
  margin-right: 2px;
  /* height: 30px; */
  float: left;
}

.org-logo image {
  width: 15px;
  height: 15px;
}

.article-headline {
  width: 100%;
  white-space: normal;
  text-align: center;
}

.activity-brief-headline {
  margin: 0 auto;
  margin-top: 5px;
  clear: both;
  font-size: 13px;
  line-height: 20px;
  width: 70%;
  text-align: center;
  border: 1px solid black;
  border-radius: 10px;
}

