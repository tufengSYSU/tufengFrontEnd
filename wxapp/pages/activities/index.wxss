/* location and search bar */
.search-container {
  width: 95%;
  margin: 0 auto;
  font-size: 14px;
  padding: 4px 10px;
  position: relative;
}

/*** location */
.location-container {
  color: #707070;
  position: absolute;
  right: 5px;
  top: 2px;
  z-index: 99;
}

.address {
  width: 40px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  float: left;
}

.location-image {
  width: 12px;
  height: 12px;
}

/*** search bar */
.search-bar-container {
  position: relative;
}

.search-icon {
  width: 15px;
  height: 15px;
  position: absolute;
  left: 5px;
  top: 4px;
  z-index: 99;
}

.search-bar-container input {
  height:30px;
  background-color:#FAFAFA;
  border-radius:20px;
  padding-left:30px;
}

/*** location end */
/*** search bar end */
/* location and search bar end */

/* slide-image */
.slide-container swiper {
  height: 180px;
}

.slide-container swiper-item .imageContainer {
  margin: 8px;
  width: calc(100% - 16px);
  height: calc(100% - 16px);
  overflow: hidden;
  /*TODO: cover */
  border-radius: 5px;
  box-shadow: 0px 0px 10px 3px rgba(0,0,0,0.14);
}

.slide-container swiper-item .imageContainer image {
  width: 100%;
}

/** slide-image style end */
/* slide-image end */

/* artical calendar */
.article-calendar-container {
  padding: 4px 10px;
  white-space: nowrap;
  overflow: hidden;
  overflow-x: scroll;
}

.brief-description-container {
  font-size: 18px;
  color: white;
}

.brief-description {
  border-radius: 4px;
  padding-right: 15px;
  padding-left: 15px;
  line-height: 30px;
  box-shadow: 0 0 3px 3px #FAFAFA;
  margin-right: 10px;
  display: inline-block;
}

.calendar-container {
  margin-top: 3px;
}

.single-day-articles {
  width: 250rpx;
  margin-right: 10px;
  display: inline-block;
}

.article-date {
  width: 100%;
  font-size: 20px;
  font-weight: bold;
  color: #C7C7C7;
}

.article-container {
  margin-top: 12rpx;
  position: relative;
  height: 250rpx;
}

.article-coverimage {
  width: 250rpx;
  height: 250rpx;
  border-radius: 2px;
}

.mark-container {
  position: absolute;
  left: 5px;
  top: 5px;
  width: 100%;
}

.mark-container image {
  width: 20px;
  height: 20px;
  margin-left: 5px;
}

.article-description {
  position: absolute;
  bottom: 5px;
  color: white;
  letter-spacing: 1px;
  font-size: 14px;
  white-space: normal;
  padding-left: 5px;
}

.red-background {
  background-color: #FF7E85;
}
.green-background {
  background-color: #A9FBEC;
}
.blue-background {
  background-color: #9BEDFF;
}
.yellow-background {
  background-color: #FFD17E;
}
.grey-background {
  background-color: #DCDCDC;
}
