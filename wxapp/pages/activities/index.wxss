@import "../../resources/templates/articleCards/index";
.topBar {
    width: 100%;
    background-color: #FAFAFA;
    position: fixed;
    z-index: 99;
}

.subTabContainer {
    margin-left: 30px;
    color: #707070;
    font-size: 14px;
    border-bottom: #707070;
    height: 30px;
}

.subTabContainer view {
    margin-top: 8px;
    float: left;
    padding-right: 7vw;
}

.gap {
    clear: both;
    height: 5px;
    border-bottom: 1px solid #D0D0D0;
}


/* location and search bar */


/*** location */

.location-container {
    color: #707070;
    position: absolute;
    right: 20px;
    top: 10px;
    z-index: 99;
    font-size: 14px;
}

.address {
    width: 40px;
    color: #707070;
    white-space: nowrap;
    float: left;
    margin-right: 10px;
    margin-top: -2px;
}

.location-image {
    margin-top: 0px;
    width: 15px;
    height: 15px;
}


/*** search bar */

.search-container {
    width: 95%;
    margin: 0 auto;
    font-size: 14px;
    padding: 4px 10px;
    position: absolute;
    top: 0px;
}

.search-bar-container {
    position: relative;
}

.search-icon {
    width: 15px;
    height: 15px;
    top: 8px;
    right: 20vw;
    position: absolute;
    z-index: 99;
}

.search-bar-container input {
    height: 30px;
    background-color: #FAFAFA;
    /*#FAFAFA*/
    border-radius: 20px;
    display: none;
}


/*** location end */


/*** search bar end */


/* location and search bar end */


/* slide-image */

.slide-container swiper {
    height: 180px;
}

.slide-container swiper-item .imageContainer {
    margin: 8px;
    width: calc(100% - 16px);
    height: calc(100% - 16px);
    border-radius: 5px;
    overflow: hidden;
    box-shadow: 0px 0px 10px 3px rgba(0, 0, 0, 0.14);
}

.slide-container swiper-item .imageContainer image {
    width: 100%;
    height: 100%;
}


/** slide-image style end */


/* slide-image end */


/* activity cards */

.registration {
    background-color: white;
    margin-bottom: 10px;
    margin-left: 10px;
    height: 100px;
    border-radius: 5px;
    overflow: hidden;
}

.registration .name {
    font-size: 18px;
}

.regis-info {
    font-size: 12px;
}

.registration image {
    width: 100%;
    height: 100px;
}

.regis-image {
    width: 45%;
    height: 100px;
    display: inline-block;
    vertical-align: top;
}

.regis-info {
    padding-left: 5%;
    display: inline-block;
    width: 50%;
}

.regis-info .name {
    margin-bottom: 10%;
    font-size: 15px;
    color: deepskyblue;
}

.regis-info .hoster {
    color: black
}

.regis-info .host {
    color: black;
    display: inline-block;
    width: 40%;
    font-weight: bold;
    margin-top: 2%;
}

.regis-info .start-time {
    display: inline-block;
    width: 60%;
}

.regis-info .location {
    display: inline-block;
    width: 40%;
}

.yellowColor {
    color: #ffba56;
}

.block {
    height: 40px;
}