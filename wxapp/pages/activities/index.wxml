<!--index.wxml-->
<view class="container">

  <!-- search -->
  <view class="search-container">
    <view class="search-wrap">
      <!-- location -->
      <view class="location-container">
        <view class="address">{{location.address}}</view>
        <image class="location-image" src="{{locationIconUrl}}"/>
      </view>
      <!-- search bar -->
      <view class="search-bar-container">
        <image class="search-icon" src="{{searchIconUrl}}"/>
        <input type="text" class="search-bar-input" focus="{{false}}" bindinput="getSearchInput" />
      </view>
    </view>
  </view>

  <!-- article-calendar-container -->
  <view class="brief-description-container">
    <view class="brief-description-container">
      <view class="brief-description {{background[idx]}}" wx:for="{{briefDescription}}" wx:for-index="idx">
        {{briefDescription[idx]}}
      </view>
    </view>
  </view>

  <!-- slide image -->
  <view class="slide-container">
    <!-- slide image core code -->
    <swiper circular="true" autoplay="true" interval="{{interval}}" duration="{{duration}}" class="picture-swiper">
      <swiper-item wx:for-items="{{imgUrl}}" wx:key="*this">
        <view class="imageContainer">
          <image mode="widthFix" src="{{item}}" class="slide-image" />
        </view>
      </swiper-item>
    </swiper>
  </view>
  <!-- article-calendar-container -->
  <view class="article-calendar-container">
    <swiper autoplay="true" interval="{{interval}}" duration="{{duration}}" class="picture-swiper">
      <swiper-item wx:for-items="{{seq}}" wx:key="*this">
        <view class="single-day-articles" wx:for="{{[3*item,3*item+1,3*item+2]}}" wx:if="{{index<content.length}}" wx:for-item="index">
          <view class="article-date">
            {{content[index].date}}
          </view>
          <view class="" wx:for="{{[1,2,3,4,5]}}">
            <view class="article-container {{visited[index] == 1 ? visitedCss : \" \" }}" bindtap="makeVisited" data-index="{{index}}">
              <image class="article-coverimage" src="{{content[index].article[0].imgUrl}}" />
              <view class="mark-container">
                <image src="../../assets/icon/mark/aixin.png"/>
                <image src="../../assets/icon/mark/ball.png"/>
                <image src="../../assets/icon/mark/money.png"/>
              </view>
              <view class="article-description">
                {{content[index].article[0].headLine}}
              </view>
            </view>
          </view>
        </view>
      </swiper-item>
    </swiper>
  </view>

</view>
