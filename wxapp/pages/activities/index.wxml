<view class="container">

  <!-- search -->
  <view class="search-container">
    <view class="search-wrap">
      <!-- location -->
      <view class="location-container">
        <view class="address">{{location.address}}</view>
        <image class="location-image" src="{{locationIcon}}"/>
      </view>
      <!-- search bar -->
      <view class="search-bar-container">
        <image class="search-icon" src="{{searchIcon}}"/>
        <input type="text" class="search-bar-input" focus="{{false}}" bindinput="getSearchInput" />
      </view>
    </view>
  </view>

  <!-- article-calendar-container -->
  <view class="brief-description-container">
    <view class="brief-description-container">
      <view class="brief-description" style="background-color:{{item.color}}" wx:for="{{briefIntroduction}}" wx:for-index="idx" wx:key="{{*index}}">
        {{item.text}}
      </view>
    </view>
  </view>

  <!-- slide image -->
  <view class="slide-container">
    <!-- slide image core code -->
    <swiper circular="true" autoplay="true" interval="3000" duration="500" class="picture-swiper">
      <swiper-item wx:for-items="{{slidePictures}}" wx:key="{{*index}}">
        <view class="imageContainer">
          <image mode="widthFix" src="{{item}}" class="slide-image" />
        </view>
      </swiper-item>
    </swiper>
  </view>
  <!-- article-calendar-container -->
