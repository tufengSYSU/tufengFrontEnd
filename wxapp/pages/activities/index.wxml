<!--index.wxml-->
<view class="container">
  <!-- 轮播图  -->
  <view class="slideContainer">
    <!-- 轮播图左侧图标和文字 -->
    <view class="leftHint">
      <image class="tobee" src="../../assets/icon/tobee.jpg"></image>
      <text class="headText">图片直播</text>
    </view>

    <!-- 轮播图核心 -->
    <swiper indicator-dots="{{indicatorDots}}" autoplay="true" interval="{{interval}}" duration="{{duration}}" class="pictureSwiper">
        <swiper-item wx:for-items="{{imgUrl}}" wx:key="*this">
          <image src="{{item}}" class="slide-image" mode="widthFix" />
        </swiper-item>
    </swiper>
  </view>

  <!-- 搜索 -->
  <view class="searchContaniner">
    <view class="searchWrap">
      <!-- 地址 -->
      <view class="locationContainer">
        <text class="address">{{location.address}}</text>
        <image class="location-image" src="{{locationIconUrl}}"/>
      </view>
      <input type="text" placeholder="输入搜索内容" class="search" confirm-type="search"/>
    </view>
  </view>
</view>
