/*** search bar */

.search-container {
    width: 95%;
    margin: 0 auto;
    font-size: 16px;
    padding-left: 10px;
    height: 40px;
}

.search-bar-container {
    position: relative;
}

.search-icon {
    width: 25px;
    height: 25px;
    top: 5px;
    right: 10px;
    position: absolute;
    z-index: 99;
}

.search-bar-container input {
    min-height: 20px;
    height: 30px;
    padding: 2px 10px;
    width: 80%;
    background-color: #FAFAFA;
    /*#FAFAFA*/
    border-radius: 20px;
}

.registration {
    background-color: #F8F8F8;
    margin-left: 10px;
    margin-right: 10px;
    height: 80px;
    border-radius: 5px;
    overflow: hidden;
    margin-top: 5px;
}

.registration .name {
    font-size: 18px;
}

.regis-info {
    font-size: 12px;
}

.registration image {
    width: 100%;
    height: 100%;
}

.regis-image {
    width: 41%;
    height: 100%;
    display: inline-block;
    vertical-align: top;
}

.regis-info {
    padding-left: 5%;
    display: inline-block;
    width: 50%;
}

.regis-info .name {
    margin-bottom: 5rpx;
    font-size: 15px;
    color: #35A4DF;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
}

.regis-info .hoster {
    color: black
}

.regis-info .host {
    color: black;
    display: inline-block;
    width: 40%;
    font-weight: bold;
    margin-top: 2%;
}

.regis-info .start-time {
    float: left;
}

.regis-info .location {
    float: right;
}