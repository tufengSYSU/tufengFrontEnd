@import "slideout.wxss";

page {
  height: 100%;
}

swiper-item {
  overflow: scroll;
}

.container {
  padding: 0;
  height: 100%;
  text-align: left;
  font-size: 12pt;
}

.container, .calender, swiper {
  height: 100%;
}

/** calender header  */

.calender-header {
  height: 32px;
  padding: 0 20px;
  background-color: white;
}

.year-month-title {
  text-align: left;
}

.year-month-title view {
  display: inline-block;
}

.year-month-title .month {
  font-size: 22px;
  font-weight: 700;
  color: #4D4D4DCD;
}

.year-month-title .year {
  margin-left: 10px;
  font-size: 19px;
  font-weight: 400;
  color: #4D4D4DCD;
}

.currentYearAndMonth view {
  display: inline-block;
}

.weekday view {
  font-size: 14px;
  color: #929292;
}

/** calender header end */

/** calender body */

.calender-body {
  height: calc(100% - 32px);
}

.week {
  padding: 0 12px;
  overflow: hidden;
  background-color: white;
}

/*** day */

.day {
  display: table;
  width: 100%;
  border: 1px solid red;
}

/**** is today */

.day-head.istoday {
  position: relative;
}

.day-head.istoday .date {
  position: relative;
  z-index: 10;
}

.day-head.istoday .date {
  color: white;
}

/**** is today end */

/**** day head */

.day-head {
  display: table-cell;
  width: 23%;
  background-color: orange;
}

.day-head .date {
  width: 14px;
  text-align: center;
  font-size: 12px;
  color: #969696;
}

/**** day head end */

/**** day body */

.day-body {
  display: table-cell;
  width: 77%;
  vertical-align: top;
  text-align: left;
}

.events {
  padding: 0;
}

.event {
  display: inline-block;
  font-size: 13px;
  color: white;
  background-color: green;
  padding: 1px 7px;
  margin: 5px 0 5px 5px;
  border-radius: 100px;
}

/**** day body end */

/*** day end */

/** calender body end */
