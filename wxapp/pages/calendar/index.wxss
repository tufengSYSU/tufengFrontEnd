@import "slideout.wxss";

page {
  height: 100%;
}

.container {
  padding: 0;
  height: 100%;
  text-align: center;
  font-size: 12pt;
  background-color: #f3f3f3;
}

.container, .calender, swiper {
  height: 100%;
}

/** calender header  */

.calender-header {
  background-color: white;
  box-shadow: 0px 0px 3px rgba(0,0,0,.14);
  height: 26px;
}

.currentYearAndMonth view {
  display: inline-block;
}

.weekday view {
  display: inline-block;
  width: 14%;
  font-size: 8pt;
}

/** calender header end */

/** calender body */

.calender-body {
  height: calc(100% - 26px);
}

.week {
  background-color: white;
  margin-top: 2px;
}

.day, .events {
  display: inline-block;
  width: 14%;
}

.events {
  padding-bottom: 5px;
  font-size: 8pt;
  vertical-align: top;
  text-align: left;
}

.event .point {
  display: inline-block;
  width: 5px;
  height: 5px;
  margin: 2px;
  background-color: #63da39;
  border-radius: 50%;
}

/** calender body end */
