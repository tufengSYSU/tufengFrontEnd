<view class="container">
  <view class="calender {{slideOut ? 'active':''}}" style="{{calenderSlideStyle}}">
    <view class="calender-header">
      <view class="weekday">
        <view wx:for="{{weekdayInCH}}" wx:key="{{index}}">{{item}}</view>
      </view>
    </view>
    <view class="calender-body">
      <!-- use the default values mostly -->
      <swiper current="{{activeIndex}}" circular="true" bindchange="swiperChange">
        <block wx:for="{{calenders}}" wx:for-item="weeksWithEvents" wx:key="unique">
          <swiper-item>
            <view class="week" wx:for="{{weeksWithEvents}}" wx:for-item="oneWeekWithEvents" wx:key="unique">
              <view class="day" wx:for="{{oneWeekWithEvents[0]}}" wx:key="{{index}}" wx:for-item="day">{{day}}</view>
              <view class="events" wx:for="{{oneWeekWithEvents[1]}}" wx:key="{{index}}" wx:for-item="dailyEvents">
                <view class="event" wx:for="{{dailyEvents}}" wx:for-item="event" wx:key="{{index}}" bindtap="slideOut">
                  <view class="point"></view>{{event}}
                </view>
              </view>
            </view>
          </swiper-item>
        </block>
      </swiper>
    </view>
  </view>
  <!-- the left is mask, and the right is the info panel -->
  <view id="left" class="{{slideOut ? 'active':''}}" bindtap="slideAway"></view>
  <view id="right" class="{{slideOut ? 'active':''}}">
    right
  </view>
</view>
