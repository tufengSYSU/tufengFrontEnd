/* myprofile index.wxss */

.container {
  height: 100vh;
  margin: 0;
  padding: 0;
  font-size: 14px;
}

.bold {
  font-weight: bold;
}

/* background */

.background {
  position: fixed;
  width: 100vw;
  height: 200px;
  /* remove the empty distance */
  font-size: 0;
}

.background image {
  width: 100%;
}

/* background end */

.background-window {
  width: 100%;
  height: 150px;
}

/* main-body */

.main-body {
  position: relative;
  /* top: 150px; */
  background-color: white;
}

/** profile  */

.profile {
  position: relative;
}

/*** headline */

.headline .avatar {
  position: absolute;
  top: -40px;
  left: 40px;
}

.headline .avatar image {
  width: 80px;
  height: 80px;
  border-radius: 50%;
}

.headline {
  text-align: center;
  padding: 20px 0;
}

.profile .headline .name {
  display: inline-block;
  position: relative;
  font-size: 24px;
  font-weight: bold;
  letter-spacing: 10px;
}

.profile .headline .name.long {
  letter-spacing: 2px;
}

.profile.male .headline .name {
  color: #35A4DFE5;
}

.profile.female .headline .name {
  color: #FFAAFFE5;
}

.profile .headline .gender-icon {
  position: absolute;
  top: -5px;
  right: -20px;
}

.profile .headline .gender-icon image {
  height: 20px;
  width: 20px;
}

.profile .headline .description {
  font-size: 12px;
  opacity: 0.3;
}

/*** headline end */

/*** userinfo */

.profile .userinfo {
  text-align: left;
  line-height: 2em;
  padding: 0px 20px 18px 20px;
}

.profile .userinfo .one-info {
  display: inline-block;
  width: 50%;
  vertical-align: top;
}

.profile .userinfo .one-info .icon {
  display: inline-block;
  width: 20%;
  padding-top: 4px;
  vertical-align: top;
  text-align: center;
  line-height: 0;
}

.profile .userinfo .one-info .text {
  display: inline-block;
  width: 70%;
  vertical-align: top;
  opacity: 0.5;
}

.profile .userinfo .one-info image {
  width: 22px;
  height: 22px;
}

/*** userinfo end */

/** profile end */

.hr {
  border: 0;
  border-bottom: 1px dashed #BBBBBB66;
  background: #fff;
}

/** explore（发现） */

.explore {
  height: 100vh;
  background-color: #F2F2F299;
}

.tabs {
  height: 52px;
  background-color: white;
  font-size: 20px;
  font-weight: bold;
}

.tab {
  display: inline-block;
  padding: 10px 0 10px 15px;
  opacity: 0.4;
}

.tab.active {
  opacity: 1;
}

/*** tabpage */

.tabpage {
  height: calc(100vh - 52px);
  /* default hidden, scroll when the tabs area reach the top of the page */
  overflow: hidden;
}

.tabpage.scroll {
  /* when the tabs area reach the top of the page */
  overflow: scroll;
}

/**** moment */

.moment {
  background-color: white;
  margin-bottom: 10px;
  padding: 10px;
}

.moment .title .avatar {
  display: inline-block;
}

.moment .title .avatar image {
  height: 48px;
  width: 48px;
  border-radius: 50%;
}

.moment .title .moment-info {
  display: inline-block;
  vertical-align: top;
  padding: 5px;
}

.moment .title .moment-info .date {
  font-size: 12px;
  opacity: 0.5;
}

.moment .text {
  line-height: 2em;
  padding: 6px 0;
}

.moment .forward {
  padding: 10px;
  background-color: #F2F2F24C;
}

.moment .forward .text {
  line-height: 2em;
  padding: 0;
}

.vote-bar {
  height: 46px;
}

.vote-bar .outline {
  float: left;
  font-size: 12px;
  opacity: 0.4;
  /* to center */
  padding: 17px;
  line-height: 12px;
}

.vote-bar .right-icons {
  float: right;
}

.vote-bar .right-icons image {
  height: 30px;
  width: 30px;
  padding: 8px;
  text-align: right;
}

.hr.comments-divider {
  border: 0;
  border-bottom: 1px solid #F2F2F299;
  background: white;
}

.comments {
  font-size: 13px;
  line-height: 1.6em;
  padding-bottom: 10px;
}

.comments .liker-bar {
  margin-top: 3px;
}

.comments .liker-bar .heart {
  display: inline-block;
  vertical-align: top;
}

.comments .liker-bar .heart image {
  height: 22px;
  width: 22px;
  padding-right: 5px;
}

.comments .liker-bar .likers, .comments .liker-bar .likers .liker {
  display: inline-block;
  vertical-align: top;
}

.comments .liker-bar .likers{
  opacity: 0.8;
}

.comments .comments-detail {
  padding-left: 27px;
  opacity: 0.8;
}

/**** moment end */

