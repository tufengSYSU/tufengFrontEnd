/* myprofile index.wxss */

.container {
  height: 100vh;
  margin: 0;
  padding: 0;
  font-size: 14px;
}

/* background */

.background {
  position: fixed;
  width: 100vw;
  height: 200px;
  /* remove the empty distance */
  font-size: 0;
}

.background image {
  width: 100%;
}

/* background end */

.background-window {
  width: 100%;
  height: 150px;
}

/* main-body */

.main-body {
  position: relative;
  /* top: 150px; */
  background-color: white;
}

/** profile  */

.profile {
  position: relative;
}

/*** headline */

.headline .avatar {
  position: absolute;
  top: -40px;
  left: 40px;
}

.headline .avatar image {
  width: 80px;
  height: 80px;
  border-radius: 50%;
}

.headline {
  text-align: center;
  padding: 10px 0;
}

.profile .headline .name {
  font-size: 24px;
  font-weight: bold;
}

.profile.male .headline .name {
  color: #35A4DFE5;
}

.profile .headline .description {
  font-size: 12px;
  opacity: 0.3;
}

.profile .headline .userinfo {
  text-align: left;
}

.profile .headline .userinfo .one-info {
  display: inline-block;
  width: 50%;
  vertical-align: top;
}

.profile .headline .userinfo .one-info image {
  width: 18px;
  height: 18px;
}

/*** headline end */

/** profile end */

.hr {
  border: 0;
  border-bottom: 1px dashed #BBBBBB66;
  background: #fff;
}

/** explore（发现） */

.explore {
  height: 100vh;
  background-color: #F2F2F299;
}

.tabs {
  height: 52px;
  background-color: white;
  font-size: 20px;
  font-weight: bold;
}

.tab {
  display: inline-block;
  padding: 10px 0 10px 15px;
  opacity: 0.4;
}

.tab.active {
  opacity: 1;
}

/*** tabpage */

.tabpage {
  height: calc(100vh - 52px);
  /* default hidden, scroll when the tabs area reach the top of the page */
  overflow: hidden;
}

.tabpage.scroll {
  /* when the tabs area reach the top of the page */
  overflow: scroll;
}

/**** moment */

.moment {
  height: 400px;
  background-color: white;
  margin-bottom: 10px;
}

