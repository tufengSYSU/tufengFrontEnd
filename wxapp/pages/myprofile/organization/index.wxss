
.container {
  margin: 0;
  padding: 0;
}

.image-container {
  position: relative;
}

.cover-image {
  width: 100%;
  height: 200px;
}

.logo {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  position: absolute;
  left: calc(50% - 50px);
  top: 150px;
}

.attention-container {
  position: absolute;
  bottom: 10px;
  right: 10px;
  z-index: 99;
  text-align: center;
  font-size: 9px;
  color: white;
}

.attention-icon {
  width: 25px;
  height: 25px;
}

.organization-name {
  margin-top: 50px;
  text-align: center;
  font-size: 26px;
  font-weight: bolder;
  opacity: 0.8;
}

.brief-introduction {
}

.brief-introduction .header {
  text-align: center;
  font-size: 12px;
  opacity: 0.7;
}

.brief-introduction .header image {
  width: 10px;
  height: 10px;
}

.information-sider li {
  display: block;
  margin-left: 10px;
  margin-top: 5px;
  font-size: 14px;
  opacity: 0.6;
}

.information-sider image {
  vertical-align: middle;
  margin-right: 3px;
  width: 20px;
  height: 20px;
}

.dashline {
  margin-top: 10px;
  height: 1px;
  border-top: 1px dashed rgba(0,0,0,0.54);
}

.menu-container {
  margin-top: 10px;
  margin-left: 10px;
  font-size: 21px;
  font-weight: bolder;
  color: black;
}

.non-hover-text {
  opacity: 0.4;
}

.hover-text {
  opacity: 0.8;
}

.activities-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.hint {
  width: 100%;
  font-size: 16px;
  margin-left: 10px;
  color: #FF4081;
  opacity: 0.61;
}

.activities-container .activity {
  margin-top: 10px;
  display: flex;
  position: relative;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
  background-color: #FAFAFA;
  border-radius: 5px;
  color: rgba(0,0,0,0.78);
  width: calc(50vw - 20px);
  height: 200px;
}

.activity-cover-image image {
  width: 100%;
  height: 100%;
}

.progress {
  font-size: 12px;
  opacity: 0.72;
  color: #FF9800;
  position: absolute;
  top: 5px;
  right: 5px;
}

.activity-introduction {
  opacity: 0.7;
  font-size: 13px;
  font-weight: bolder;
}

.vertical-cover-image {
  width: 50%;
  height: 80%;
}

.cross-cover-image {
  height: 60%;
  width: 80%;
}

.vertical-activity-introduction {
  width: 40%;
}

.cross-activity-introduction {
  margin-top: 20px;
  width: 100%;
  text-align: center;
  order: -1;
}

.album-container {
  margin-top: 20px;
}

.picture-container {
  display: flex;
  flex-wrap: wrap;
}

.picture-container image {
  width: 100px;
  max-width: 100%;
}

.test {
  margin-top: 20px;
  column-count: 2;
  column-gap: 1rem;
  column-width: 50%;
}

.test image {
  max-width: 100%;
  width: 100%;
  height: auto;
}
