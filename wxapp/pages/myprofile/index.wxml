<!--index.wxml-->
<scroll-view scroll-y class="container" bindscroll="tabpageScroll" bindscrolltolower="scrollToLower">
  <view class="background">
    <image src="{{user.background}}" mode="widthFix"></image>
  </view>
  <view class="background-window">
  </view>
  <view class="main-body">
    <view class="profile {{user.gender}}">
      <view class="headline">
        <view class="avatar">
          <image src="{{user.avatar}}"></image>
        </view>
        <view class="name">
          {{user.name}}
        </view>
        <view class="description">
          {{user.description}}
        </view>
        <view class="userinfo">
          <view class="one-info">
            <image src="{{user.infoIcon.person_info}}"></image> {{user.info.person_info}}
          </view>
          <view class="one-info">
            <image src="{{user.infoIcon.contact}}"></image> {{user.info.contact}}
          </view>
          <view class="one-info">
            <image src="{{user.infoIcon.school}}"></image> {{user.info.school}}
          </view>
          <view class="one-info">
            <image src="{{user.infoIcon.hobby}}"></image> {{user.info.hobby}}
          </view>
        </view>
      </view>
    </view>
    <view class="hr"></view>
    <view class="explore">
      <view class="tabs">
        <view class="tab {{tabIndex === index ? 'active' : ''}}" wx:for="{{tabs}}" wx:for-item="tab" wx:key="{{index}}" bindtap="clickTab" data-index="{{index}}">
          {{tab}}
        </view>
      </view>
      <view class="tabpage {{reachTop ? 'scroll' : ''}}">
        <view class="moment">
          1
        </view>
        <view class="moment">
          2
        </view>
        <view class="moment">
          3
        </view>
      </view>
    </view>
  </view>
</scroll-view>
