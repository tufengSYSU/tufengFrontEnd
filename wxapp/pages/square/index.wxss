
.bar {
  background-color: white;
  position: fixed;
  font-size: 20px;
  width: 100%;
  height: 30px;
  padding: 10px;
}

.active {
  opacity: 1;
}

.white-block {
  height: 30px;
}

.recommend {
  padding: 10px;
}

.recommend .avatar {
  border-radius: 50%;
  width: 48px;
  height: 48px;
}

.moment {
  background-color: white;
  margin-bottom: 10px;
  padding: 10px;
}

.moment .title .avatar {
  display: inline-block;
}

.moment .title .avatar image {
  height: 48px;
  width: 48px;
  border-radius: 50%;
}

.moment .title .moment-info {
  display: inline-block;
  vertical-align: top;
  padding: 5px;
}

.moment .title .moment-info .date {
  font-size: 12px;
  opacity: 0.5;
}

.moment .text {
  line-height: 2em;
  padding: 6px 0;
}

.moment .forward {
  padding: 10px;
  background-color: #F2F2F24C;
}

.moment .forward .text {
  line-height: 2em;
  padding: 0;
}

.vote-bar {
  height: 46px;
}

.vote-bar .outline {
  float: left;
  font-size: 12px;
  opacity: 0.4;
  /* to center */
  padding: 17px;
  line-height: 12px;
}

.vote-bar .right-icons {
  float: right;
}

.vote-bar .right-icons image {
  height: 30px;
  width: 30px;
  padding: 8px;
  text-align: right;
}

.hr.comments-divider {
  border: 0;
  border-bottom: 1px solid #F2F2F299;
  background: white;
}

.comments {
  font-size: 13px;
  line-height: 1.6em;
  padding-bottom: 10px;
}

.comments .liker-bar {
  margin-top: 3px;
}

.comments .liker-bar .heart {
  display: inline-block;
  vertical-align: top;
}

.comments .liker-bar .heart image {
  height: 22px;
  width: 22px;
  padding-right: 5px;
}

.comments .liker-bar .likers, .comments .liker-bar .likers .liker {
  display: inline-block;
  vertical-align: top;
}

.comments .liker-bar .likers{
  opacity: 0.8;
}

.comments .comments-detail {
  padding-left: 27px;
  opacity: 0.8;
}

.organization-wall {
  padding: 10px;
}

.organization-wall .outline {
  font-size: 16px;
}

.concerns image {
  width: 48px;
  height: 48px;
  border-radius: 50%;
}

.concerns .outline {
  color: #FF4081E5;
}

.participate-organization .outline {
  color: #35A4DFE5;
}

.organization-card {
  border-radius: 10px;
  box-shadow: 0 0 35px #E6E6E6;
  width: 220px;
  height: 220px;
  background-color: white;
}

.organization-card .avatar {
  float: left;
}

.organization-card .avatar image {
  width: 80px;
  height: 80px;
  border-radius: 50%;
}

.organization-card .organization-name {
  font-size: 18px;
  padding-top: 15px;
  color: #101010;
  width: 200px;
  text-align: center;
}

.organization-card .occupation {
  font-size: 14px;
  padding-bottom: 20px;
  width: 200px;
  text-align: center;
  color: #35A4DF;
}

.organization-controllers {
  padding-top: 5px;
  font-size: 11px;
  color: #A6A2A5;
}

.organization-controllers .menu {
  display: inline;
  position: relative;
  height: 50px;
  float:left;
  padding-left: 20px;
  padding-bottom: 10px;
}

.menu .icon image {
  height: 48px;
  width: 48px;
}

.menu .text {
  margin-top: -10px;
}

.nearby .outline {
  color: #FF9800E5;
}

.nearby image {
  float: left;
  width: 48px;
  height: 48px;
  border-radius: 50%;
}

.nearby .organization view {
  height: 34px;
  padding-top: 14px;
}

.dashline {
  background: #F2F2F2;
  height: 5rpx;
  width: 100%;
}
