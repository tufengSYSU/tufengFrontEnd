.container {
  height: 100vh;
  margin: 0;
  padding: 0;
  font-size: 14px;
}

/* background */

.background {
  position: fixed;
  top: 0;
  width: 100vw;
  height: 300px;
  /* remove the empty distance */
  font-size: 0;
  z-index: -1;
}

.background image {
  width: 100%;
}

/* background end */
.background-window {
  width: 100%;
  height: 144px;
}

/** profile  */
.profile .avatar {
  padding-top: 115px;
  padding-left: 10%;
}

.profile .avatar image {
  width: 60px;
  height: 60px;
  border-radius: 50%;
}

.information {
  z-index: 0;
  width: 100%;
  background-color: white;
  padding-top: 120px;
  height: 100px;
  border-bottom: dashed;
  border-color: whitesmoke; 
}

.information .name {
  text-align: center;
  position: relative;
  top: -108px;
  color: deepskyblue;
  font-size: 18px;
  font-weight: bold;
}

.information .description {
  position: relative;
  top: -108px;
  text-align: center;
  font-size: 12px;
  color: #FF4081;
}
.information .title-1 {
  position: relative;
  top: -95px;
}
.information .personal-info{
  display: inline-block;
  margin-left: 10%;
  width: 35%;
  font-size: 13px;
}
.information .school {
  display: inline-block;
  font-size: 13px;
  margin-left: 10%; 
}