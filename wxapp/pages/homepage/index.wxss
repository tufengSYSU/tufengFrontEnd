/* homepage index.wxss */

@import "../../resources/templates/moments/moments.wxss";
@import "../../resources/templates/messages/messages.wxss";
@import "../../resources/templates/personalizations/personalization.wxss";

.container {
  height: 100vh;
  margin: 0;
  padding: 0;
  font-size: 14px;
}

/* background */

.background {
  position: fixed;
  top: 0;
  width: 100vw;
  height: 200px;
  /* remove the empty distance */
  font-size: 0;
  z-index: -1;
}

.background image {
  width: 100%;
}

/* background end */

.background-window {
  width: 100%;
  height: 114px;
}

/** profile  */

.profile {
  text-align: center;
}

.profile .avatar {
  padding-top: 35px;
}

.profile .avatar image {
  width: 60px;
  height: 60px;
  border-radius: 50%;
}

/** profile end */

/* main-body */

.main-body {
  position: relative;
}

.tabs {
  height: 36px;
  /* There's a bug and it's needed to be added in wxml instead */
  /* background-image: url("../../assets/homepage/tabs_background.png"); */
  background-size: contain;
  background-repeat: repeat-x;
  font-size: 18px;
  color: white;
}

.tab {
  display: inline-block;
  line-height: 18px;
  padding: 9px 0 9px 15px;
}

.tab.active {
  color: #ff9800;
}

/** tabpage */

.tabpage {
  height: calc(100vh - 36px);
  background-color: #f4f4f4;
  /* default hidden, scroll when the tabs area reach the top of the page */
  overflow: hidden;
}

.tabpage.scroll {
  /* when the tabs area reach the top of the page */
  overflow: scroll;
}

/*** activities */

.activites-tabbar {
  background-color: white;
}

.my-activites {
  margin-top: 10px;
  padding: 10px;
}

.my-activites view:first-child {
  display: inline-block;
  font-size: 14px;
  line-height: 14px;
  color: #919191;
}

.my-activites view:last-child {
  float: right;
  font-size: 12px;
  color: #b4b4b4;
}

.hr {
  border: 0;
  border-bottom: 1px solid #e7e7e7;
  background: #fff;
}

.activity {
  margin-top: 10px;
  background-color: white;
}

.tabs-container {
  text-align: center;
}

.tabs-container .act-tab {
  display: inline-block;
  width: 33%;
  padding: 10px 0 5px 0;
  font-size: 12px;
  color: #b3b3b3;
}

.icon-area {
  width: 34px;
  height: 34px;
  margin-left: auto;
  margin-right: auto;
  overflow: hidden;
  margin-bottom: 5px;
}

.act-tab-icon {
  background-size: contain;
  width: 34px;
  height: 34px;
}

.act-tab.active .act-tab-icon {
  position: relative;
  left: -34px;
  -webkit-filter: drop-shadow(34px 0 #ffac32);
  filter: drop-shadow(34px 0 #ffac32);
}

/*** activities end */

/*** album */

.album {
  height: 200%;
  padding: 10px;
  background-color: white;
}

/*** album end */

/** tabpage end */

/* main-body end */
