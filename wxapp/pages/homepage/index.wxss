@import "../../resources/templates/messages/messages.wxss";
@import "../../resources/templates/cards/cards.wxss";
@import "../../resources/templates/personalizations/personalization.wxss";

/* homepage index.wxss */

.container {
    height: 100vh;
    margin: 0;
    padding: 0;
    font-size: 14px;
}


/* background */

.background {
    position: fixed;
    top: 0;
    width: 100vw;
    height: 200px;
    /* remove the empty distance */
    font-size: 0;
    z-index: -1;
}

.background image {
    width: 100%;
}


/* background end */

.background-window {
    width: 100%;
    height: 114px;
}


/** profile  */

.profile {
    text-align: center;
}

.profile .avatar {
    padding-top: 35px;
}

.profile .avatar image {
    width: 60px;
    height: 60px;
    border-radius: 50%;
}


/** profile end */


/* main-body */

.main-body {
    position: relative;
}

.tabs {
    height: 36px;
    /* There's a bug and it's needed to be added in wxml instead */
    /* background-image: url("../../assets/homepage/tabs_background.png"); */
    background-size: contain;
    background-repeat: repeat-x;
    font-size: 18px;
    color: white;
}

.tab {
    display: inline-block;
    line-height: 18px;
    padding: 9px 0 9px;
    margin-left: 17%;
    width: 12%;
}

.activity-tab {
    display: inline-block;
    line-height: 18px;
    padding: 9px 0 9px;
    margin-left: 17%;
    width: 12%;
    font-size: 12px;
    color: #505050
}

.activity-tab.active {
    color: #ff9800;
}

.tab.active {
    color: #ff9800;
}


/** tabpage */

.tabpage {
    height: calc(100vh - 36px);
    background-color: #f4f4f4;
    /* default hidden, scroll when the tabs area reach the top of the page */
    overflow: hidden;
}

.tabpage.scroll {
    /* when the tabs area reach the top of the page */
    overflow: scroll;
}


/*** activities */

.attention-tabbar {
    background-color: white;
}

.sub-tab {
    font-size: 24px;
    font-weight: bold;
    background-color: white;
}

.sub-tab view {
    margin-left: 10px;
    opacity: 0.4;
    display: inline;
}

.sub-tab .active {
    opacity: 1;
}

.organizations-container {
    background-color: white;
}

.organizations-container .organization image {
    float: left;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    padding-right: 10px;
}

.organizations-container .organization {
    padding: 10px;
    font-size: 18px;
}

.organizations-container .organization view {
    height: 34px;
    padding-top: 8px;
}

.activities-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    background-color: white;
}

.hint {
    width: 100%;
    font-size: 16px;
    margin-left: 10px;
    color: #FF4081;
    opacity: 0.61;
}

.activities-container .activity {
    margin-top: 10px;
    display: flex;
    position: relative;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    background-color: #FAFAFA;
    border-radius: 5px;
    color: rgba(0, 0, 0, 0.78);
    width: calc(50vw - 20px);
    height: 200px;
    padding-top: 30px;
}

.progress {
    font-size: 12px;
    opacity: 0.72;
    color: #FF9800;
    position: absolute;
    top: 5px;
    right: 5px;
}

.activity-cover-image {
    width: 100%;
    max-height: 80%;
}

.activity-name {
    opacity: 0.7;
    font-size: 13px;
    font-weight: bolder;
    letter-spacing: 0.1em;
    text-align: center;
}

.my-registrations {
    margin-top: 10px;
}

.example {
    margin-top: 30px;
    margin-left: 10px;
    color: #FF9800;
    font-size: 16px;
}

.registration {
    background-color: white;
    margin-bottom: 10px;
    margin-left: 10px;
    height: 100px;
    margin-top: 40px;
}

.registration .name {
    font-size: 18px;
}

.regis-info {
    font-size: 12px;
}

.registration image {
    width: 100%;
    height: 100px;
}

.regis-image {
    width: 45%;
    height: 100px;
    display: inline-block;
    vertical-align: top;
}

.regis-info {
    padding-left: 5%;
    display: inline-block;
    width: 50%;
}

.regis-info .name {
    margin-bottom: 10%;
    font-size: 15px;
    color: deepskyblue;
}

.regis-info .hoster {
    color: black
}

.regis-info .host {
    color: black;
    display: inline-block;
    width: 40%;
    font-weight: bold;
    margin-top: 2%;
}

.regis-info .start-time {
    display: inline-block;
    width: 60%;
}

.regis-info .location {
    display: inline-block;
    width: 40%;
}


/*** album */

.album {
    height: 200%;
}

.registration .icon-group image {
    width: 15px;
    height: 15px;
    float: left;
}

.registration .footer {
    padding: 10px;
}

.registration .footer image {
    width: 20px;
    height: 20px;
    float: left;
    margin-right: 10px;
}

.dashline {
    background-color: #E2E2E2;
    height: 15rpx;
    width: 100%;
}

.fixed {
    position: fixed;
}

.has-signedup {
    height: 150px;
    color: black;
    background-color: white;
    margin-top: 40px;
}

.ticket {
    height: 100%;
    width: 100%;
}

.ticket-image {
    width: 100%;
    height: 100%;
    background-size: contain;
    opacity: 0.3;
}

.ticket-text {
    height: 100%;
    width: 100%;
    position: relative;
    top: -100%;
}

.ticket-title {
    text-align: center;
    font-size: 18px;
    color: deepskyblue;
    font-weight: bold;
}

.hostTime {
    display: inline-block;
    margin-left: 23%;
    width: 15%;
    font-size: 13px;
    color: deepskyblue
}

.hostLocation {
    display: inline-block;
    width: 50%;
    font-size: 13px;
    color: deepskyblue
}

.personalmessage {
    margin-top: 5%;
}


/** tabpage end */


/* main-body end */

.top-per {
    background-color: white;
}

.top-per>view {
    padding: 10px;
    margin-left: 5px;
    font-size: 16px;
    border-bottom: 1px solid #D0D0D0;
    height: 30px;
}

.signUpName {
    float: left;
}

.academic {
    float: left;
}

.signUpPhone {
    float: left;
}

.signUpID {
    float: left;
}

.gender {
    float: left;
}

.rightHint {
    float: right;
    color: #6E9EBB;
}

.table {
    opacity: 0.9;
    width: 100%;
    margin-top: 15px;
}

.tr {
    display: flex;
    width: 100%;
    margin-top: 1px;
    background-color: white;
}

.td {
    display: flex;
    width: 3%;
    line-height: 2;
}

.td1 {
    display: flex;
    width: 22%;
