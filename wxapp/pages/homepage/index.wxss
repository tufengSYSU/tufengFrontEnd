    font-size: 14px;
    line-height: 2;
}

.td2 {
    display: flex;
    width: 70%;
    color: #545354;
    font-size: 14px;
    line-height: 2;
    position: relative;
    top: -1px;
}

.td3 {
    display: flex;
    width: 75%;
    color: #545354;
    font-size: 14px;
    line-height: 2;
    position: relative;
    top: -1px;
}

.button-group {
    margin-top: 5%;
}

.confirm {
    display: inline-block;
    margin-left: 13%;
    width: 30%;
    font-size: 12px;
    text-align: center;
}

.cancel {
    display: inline-block;
    margin-left: 13%;
    width: 30%;
    font-size: 12px;
    text-align: center;
}

.p-avatar image {
    opacity: 0.4;
    height: 25px;
    width: 30px;
    text-align: center;
}

.signedIcon {
    margin-bottom: 5px;
}

.processingIcon {
    margin-bottom: 5px;
}

.finishedIcon {
    margin-bottom: 5px;
}

.signedIcon image {
    height: 35px;
    width: 35px;
}

.processingIcon image {
    height: 35px;
    width: 35px;
}

.finishedIcon image {
    height: 35px;
    width: 35px;
}